{
    "manifest_version": 3,
    "name": "Trivia Trials",
    "version": "1.0",
    "description": "Play Trivia Trials, a quiz game using the Open Trivia Database API.",
    "permissions": [
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Trivia Trials"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  